{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "echo ${config:bob.is} ${config:go} mix",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "setup",
                "make hello",
                "make edit"
            ]
        },
       	{
            "hide": true,
            "label": "setup",
            "type": "shell",
            "linux": {
                "command": "cc -o foreach.exe ../tools/foreach.c"
            },
            "osx": {
                "command": "echo foreach"
            },
            "windows": {
                "command": "cl /Fe: foreach.exe ../tools/foreach.c"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
	    "dependsOn": [
                "make path"
            ]
 
        },
       	{
            "hide": true,
            "label": "make edit",
            "type": "shell",
            "linux": {
                "command": "cc -o edit ${config:edit.src}"
            },
            "osx": {
                "command": "mkdir -p build"
            },
            "windows": {
                "command": "cl /Fe: edit ${config:edit.src}"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
	    "dependsOn": [
                "make path"
            ]
 
        },
        {
            "hide": true,
            "label": "make path",
            "type": "shell",
            "linux": {
                "command": "mkdir -p build"
            },
            "osx": {
                "command": "mkdir -p build"
            },
            "windows": {
                "command": "cd build 2>NUL && cd .. || md build"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "hide": true,
            "label": "make hello",
            "type": "shell",
            "linux": {
                "command": "./foreach.exe 'echo ${name} ' \"\\\"trip 'off\\\"\" Hello `uname -a`"
            },
            "osx": {
                "command": "echo Hello MacOS"
            },
            "windows": {
               "command": "foreach.exe \"echo ${name} \" \"\\\"trip 'off\\\"\" Hello \"Windows 11\" 12"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "setup"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "rm -rf build"
            },
            "osx": {
                "command": "echo Hello MacOS"
            },
            "windows": {
                "command": "echo Hello Windows"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [],
            "problemMatcher": []
        }
    ]
}

