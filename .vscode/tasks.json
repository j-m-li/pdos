{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "echo ${config:bob.is} ${config:go}",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "setup",
                "make hello"
            ]
        },
        {
            "hide": true,
            "label": "setup",
            "type": "shell",
            "linux": {
                "command": "mkdir -p build; touch build/build.exe"
            },
            "osx": {
                "command": "mkdir -p build"
            },
            "windows": {
                "command": "mkdir build"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "hide": true,
            "label": "make hello",
            "type": "shell",
            "linux": {
                "command": "echo Hello `uname -a`"
            },
            "osx": {
                "command": "echo Hello MacOS"
            },
            "windows": {
                "command": "echo Hello Windows"
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "setup"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "rm -rf build"
            },
            "osx": {
                "command": "echo Hello MacOS"
            },
            "windows": {
                "command": "echo Hello Windows"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [],
            "problemMatcher": []
        }
    ]
}

